<h1><%= t('views.common.title_show', name: Book.model_name.human) %></h1>

<p>
  <strong><%= Book.human_attribute_name(:title) %>:</strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:memo) %>:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:author) %>:</strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:picture) %>:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<%= link_to t('views.common.edit'), edit_book_path(@book) %> |
<%= link_to t('views.common.back'), books_path %>

<h1><%= Comment.model_name.human %></h1>

<% if @book.comments.count.zero? %>
  <p><%= t('comments.show.no_comment') %></p>
<% else %>
  <% @book.comments.each do |comment| %>
    <p><%= comment.user.name_or_email %>
    <%= l comment.created_at, format: :long %></p>
    <p><%= comment.body %></p>
    <% if current_user.commented?(comment) %>
      <%= link_to t('views.common.destroy'), [@book, comment], method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
    <% end %>
  <% end %>
<% end %>

<%= form_with(model: [@book, Comment.new], local: true) do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, required: true %>
  </div>

  <div class="actions">
    <%= form.submit t('comments.show.create') %>
  </div>
<% end %>
